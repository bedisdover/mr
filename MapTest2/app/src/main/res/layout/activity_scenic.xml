<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageButton
        android:id="@+id/activity_scenic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/back"
        android:contentDescription="@string/back"
        android:onClick="back" />

    <TextView
        android:id="@+id/activity_scenic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_scenic_back"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/activity_scenic_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_scenic_back"
        android:background="@drawable/play" />

    <TextView
        android:id="@+id/activity_scenic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/activity_scenic_name"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>