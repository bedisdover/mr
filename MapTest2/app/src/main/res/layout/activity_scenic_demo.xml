<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDemo"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageButton
        android:id="@+id/activity_scenic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/back"
        android:contentDescription="@string/back"
        android:onClick="back" />

    <TextView
        android:id="@+id/activity_scenic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_scenic_back"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/activity_scenic_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_scenic_back"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/play"
        android:contentDescription="@string/play_pause" />

    <TextView
        android:id="@+id/activity_scenic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_scenic_name"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <cn.edu.nju.bedisdover.maptest.PowerImageView
        android:id="@+id/gif_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_scenic_description"
        android:layout_centerHorizontal="true"
        android:src="@drawable/demo" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gif_demo">

        <TextView
            android:id="@+id/gif_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gif_description"
            android:textColor="#000000" />
    </ScrollView>

</RelativeLayout>